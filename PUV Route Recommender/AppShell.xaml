<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CommuteMate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CommuteMate"
    xmlns:views="clr-namespace:CommuteMate.Views"
    xmlns:the49="https://schemas.the49.com/dotnet/2023/maui"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:NavigatingPage}"
            Route="NavigatingPage" 
            Icon="home_icon.png"/>

        <ShellContent
            Title="Routes"
            ContentTemplate="{DataTemplate views:RoutesView}"
            Route="RoutesView" 
            Icon="routes_icon.png"/>

        <ShellContent
            Title="PUVs"
            ContentTemplate="{DataTemplate views:InfoPage}"
            Route="InforPage" 
            Icon="vehicle_icon.svg"/>

        <!--<ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate views:MethodTests}"
            Route="MethodTests" 
            Icon="dotnet_bot.svg"/>-->

    </TabBar>
</Shell>
