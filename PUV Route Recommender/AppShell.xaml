<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CommuteMate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CommuteMate"
    xmlns:views="clr-namespace:CommuteMate.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:NavigatingPage}"
            Route="NavigatingPage" 
            Icon="home_icon.png"/>
        
        <ShellContent
            Title="Routes"
            ContentTemplate="{DataTemplate views:RoutesView}"
            Route="RoutesView" 
            Icon="routes_icon.png"/>

        <ShellContent
            Title="List"
            ContentTemplate="{DataTemplate views:InfoPage}"
            Route="InforPage" 
            Icon="list_icon.svg"/>

        <!--<ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Icon="list_icon.svg"/>-->

    </TabBar>

</Shell>
