<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:CommuteMate.ViewModels"
             xmlns:model ="clr-namespace:CommuteMate.Models"
             xmlns:local="clr-namespace:CommuteMate.Views"
             x:Class="CommuteMate.Views.RouteDetailsView"
             x:DataType="viewModel:RouteDetailsViewModel"
             Title="{Binding Title}">


    <Grid RowDefinitions="Auto,300,Auto,*" >
        <Label Text="{Binding Route.Code, StringFormat='Route: {0}'}" Grid.Row="0"/>
        <Label Text="Streets part of the Route" HorizontalOptions="Center" Padding="10" Grid.Row="1"/>
        <CollectionView
            Margin="1,10" 
            BackgroundColor="Transparent"
            Grid.Row="2"
            ItemsSource="{Binding Streets}">
        
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Street">
                    <Label Text="{Binding Name}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="3" Text="Get Streets" Command="{Binding GetStreetsCommand}" HeightRequest="40"/>
    </Grid>
</ContentPage>